<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.allpay.tw.mobilesdk.demo"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="15" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application android:allowBackup="true" android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher" android:theme="@style/AppTheme">

        <activity android:name=".Main" android:screenOrientation="portrait" android:launchMode="singleTask" />

        <activity android:name=".MainBackground" android:screenOrientation="portrait" android:launchMode="singleTask" />

        <activity android:name=".Result" android:screenOrientation="portrait" android:launchMode="singleTask" />

        <activity android:name=".MainPre" android:label="@string/app_name"
            android:screenOrientation="portrait" android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.allpay.tw.mobilesdk.PaymentActivity" android:screenOrientation="portrait" android:launchMode="singleTop" />

    </application>

</manifest>
