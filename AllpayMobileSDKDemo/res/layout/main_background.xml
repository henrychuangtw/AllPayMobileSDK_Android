<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:focusable="true" 
    android:focusableInTouchMode="true"
    android:orientation="vertical" >
    
    
    <LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="visible"
    android:id="@+id/layout_menu">
    
	     <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_horizontal"
	        android:layout_marginTop="20dp"
	        android:textSize="16sp"
	        android:text="請選擇付款方式" />
		
	    <LinearLayout android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:gravity="center_horizontal"
	         android:layout_marginTop="20dp" >
	        
	         <Button android:layout_width="@dimen/button_width_backgroound"
	        android:layout_height="50dp"   
	        android:id="@+id/btnBackgroundATM"
	        android:layout_gravity="center_horizontal"
	        android:text="ATM(幕後)" />
	        
	         <Spinner
	        android:id="@+id/spinner_ATM_background"
	        android:layout_width="160dp"
	        android:layout_height="wrap_content" />
	         
	    </LinearLayout>
	    
	     
	    <LinearLayout android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:gravity="center_horizontal"
	         android:layout_marginTop="20dp" >
	        
	        <Button android:layout_width="@dimen/button_width_backgroound"
	        android:layout_height="50dp"
	       	android:layout_gravity="center_horizontal"
	        android:id="@+id/btnBackgroundCVS"
	        android:text="超商代碼(幕後)" />
	        
	        <Spinner
	        android:id="@+id/spinner_CVS_background"
	        android:layout_width="160dp"
	        android:layout_height="wrap_content" />
	    </LinearLayout>
	    
	   
	    <LinearLayout android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:gravity="center_horizontal"
	         android:layout_marginTop="20dp" >
	        
	        <Button android:layout_width="@dimen/button_width_backgroound"
	        android:layout_height="50dp"
	        android:layout_gravity="center_horizontal"
	        android:id="@+id/btnBackgroundCredit"
	        android:text="信用卡(幕後)" />
	        
	        <EditText android:id="@+id/edt_credit_phone"
	        android:layout_width="160dp"
	        android:layout_height="wrap_content"
	        android:inputType="phone"
	        android:hint="請輸入手機號碼" />
	        
	    </LinearLayout>
	    
	    
	    <LinearLayout android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:gravity="center_horizontal"
	         android:layout_marginTop="20dp" >
	        
	        <Button android:layout_width="@dimen/button_width_backgroound"
	        android:layout_height="50dp"
	        android:layout_gravity="center_horizontal"
	        android:id="@+id/btnBackgroundCreditInstallment"
	        android:text="信用卡分期(幕後)" />
	        
	        <EditText android:id="@+id/edt_creditInstallment_phone"
	        android:layout_width="160dp"
	        android:layout_height="wrap_content"
	        android:inputType="phone"
	        android:hint="請輸入手機號碼" />
	        
	    </LinearLayout>
	    
    	
	     
	    
    </LinearLayout>
    
	
     <LinearLayout android:layout_width="match_parent"
    		android:layout_height="match_parent"
    		android:orientation="vertical"
    		android:visibility="gone"
    		android:paddingLeft="20dp"
    		android:paddingTop="20dp"
    		android:id="@+id/layout_otp">
    	
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="請輸入簡訊驗證碼：" />
        
        <EditText android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:inputType="phone"
            android:id="@+id/edtOTP" />
        
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:id="@+id/txtOtpExpiredTime"/>
        
        <Button android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/btnOTP"
            android:text="確認" />
        
	</LinearLayout>
    
    
</LinearLayout>
